{
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true, //örn end point üzerinden saniye de 100 req olsun.
    "StackBlockedRequests": false, //örn dakika da 1 request yapýlabilir. fazla istek yapýlýrsa sayýlsýn mý? -sayma
    "HttpStatusCode": 429, //429->çok fazla req yaptýn. Çok fazla istek yapýldýðýnda dönen kod
    "IpWhitelist": [ "127.0.0.1" ], //Sýnýrlama konulmayan ip adresleri
    "GeneralRules": [
      {
        "Endpoint": "*", // tüm endpointler
        "Period": "5s", //Periyot olarak; 1s-> 1saniye, 1m-> 1dakika, 1d-> 1gün de
        "Limit": 2 //2 req yapýlýr. Örn: Tüm endpointlere 5 saniye de 5 istek yapýlabilir.
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
